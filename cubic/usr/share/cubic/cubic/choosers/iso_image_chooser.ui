<interface>
  <requires lib="gtk+" version="3.22"/>
  <object class="GtkFileFilter" id="file_filter_iso_file">
    <mime-types>
      <mime-type>application/x-iso9660-image</mime-type>
    </mime-types>
  </object>
  <object class="GtkFileChooserDialog" id="iso_image_chooser">
    <!-- Resolve Gtk-WARNING: Content added to the action area of a dialog using header bars. -->
    <property name="use-header-bar">0</property>
    <property name="width-request">600</property>
    <property name="height-request">600</property>
    <property name="can-focus">False</property>
    <property name="modal">True</property>
    <property name="window-position">center-on-parent</property>
    <property name="destroy-with-parent">True</property>
    <property name="type-hint">dialog</property>
    <property name="gravity">center</property>
    <property name="create-folders">False</property>
    <property name="filter">file_filter_iso_file</property>
    <signal name="delete-event" handler="on_delete_event__iso_image_chooser" swapped="no"/>
    <signal name="file-activated" handler="on_file_activated__iso_image_chooser" swapped="no"/>
    <signal name="selection-changed" handler="on_selection_changed__iso_image_chooser" swapped="no"/>
    <child type="titlebar">
      <object class="GtkHeaderBar" id="iso_image_chooser__header_bar">
        <property name="visible">True</property>
        <property name="can-focus">False</property>
        <property name="title">Cubic - Select ISO Disk Image</property>
        <property name="spacing">18</property>
        <signal name="map" handler="on_map__iso_image_chooser__header_bar" swapped="no"/>
        <child>
          <object class="GtkButton" id="iso_image_chooser__cancel_button_1">
            <property name="label" translatable="yes">Cancel</property>
            <property name="visible">True</property>
            <property name="can-focus">True</property>
            <property name="receives-default">True</property>
            <signal name="clicked" handler="on_clicked__iso_image_chooser__cancel_button" swapped="no"/>
            <style>
              <class name="destructive-action"/>
            </style>
          </object>
        </child>
        <child>
          <object class="GtkButton" id="iso_image_chooser__select_button_1">
            <property name="label" translatable="yes">Select</property>
            <property name="visible">True</property>
            <property name="can-focus">True</property>
            <property name="receives-default">True</property>
            <property name="image-position">right</property>
            <signal name="clicked" handler="on_clicked__iso_image_chooser__select_button" swapped="no"/>
            <style>
              <class name="suggested-action"/>
            </style>
          </object>
          <packing>
            <property name="pack-type">end</property>
            <property name="position">1</property>
          </packing>
        </child>
      </object>
    </child>
    <child internal-child="vbox">
      <object class="GtkBox" id="iso_image_chooser__box">
        <property name="can-focus">False</property>
        <property name="orientation">vertical</property>
        <child internal-child="action_area">
          <object class="GtkButtonBox" id="iso_image_chooser__button_box">
            <property name="can-focus">False</property>
            <child>
              <object class="GtkButton" id="iso_image_chooser__cancel_button_2">
                <property name="label" translatable="yes">Cancel</property>
                <property name="visible">True</property>
                <property name="can-focus">True</property>
                <property name="receives-default">True</property>
                <signal name="clicked" handler="on_clicked__iso_image_chooser__cancel_button" swapped="no"/>
                <style>
                  <class name="destructive-action"/>
                </style>
              </object>
              <packing>
                <property name="expand">True</property>
                <property name="fill">True</property>
                <property name="position">0</property>
              </packing>
            </child>
            <child>
              <object class="GtkButton" id="iso_image_chooser__select_button_2">
                <property name="label" translatable="yes">Select</property>
                <property name="visible">True</property>
                <property name="can-focus">True</property>
                <property name="receives-default">True</property>
                <property name="image-position">right</property>
                <signal name="clicked" handler="on_clicked__iso_image_chooser__select_button" swapped="no"/>
                <style>
                  <class name="suggested-action"/>
                </style>
              </object>
              <packing>
                <property name="expand">True</property>
                <property name="fill">True</property>
                <property name="position">1</property>
              </packing>
            </child>
          </object>
          <packing>
            <property name="expand">False</property>
            <property name="fill">False</property>
            <property name="position">0</property>
          </packing>
        </child>
      </object>
    </child>
  </object>
</interface>
